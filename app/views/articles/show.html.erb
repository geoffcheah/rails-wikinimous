<%= render 'navbar' %>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <article>
        <h1><%= @article.title %>
          <%= link_to edit_article_path do %>
          <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to article_path, method: :delete, data: { confirm: "Are you sure?" } do  %>
          <i class="fas fa-trash"></i>
          <% end %>
        </h1>
        <p><%= @article.content %></p>
      </article>
    </div>
  </div>
</div>
